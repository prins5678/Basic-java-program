import java.util.Scanner;
public class simpleinterest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
Scanner input=new Scanner(System.in);
System.out.println("welcome to simple interest calsy");
System.out.print("enter your principle amount Rs:");
int principle=input.nextInt();
System.out.print("Now enter your rate of interest:");
float rate=input.nextFloat();
System.out.print("Now enter your timeing in interest: ");
float timeing=input.nextFloat();
float interest=(principle*rate*timeing)/100;
System.out.println("The final simple interest is Rs:" +interest);
	}

}
